<div class="hero-section" data-controller="hero">
  <%= render 'shared/featured_video' %>
</div>

<div class="container"> <!-- Add container here -->
  <div class="video-grid"
       data-controller="video-grid"
       data-action="scroll@window->video-grid#handleScroll">

    <%= render 'shared/category_filters' %>

    <div class="row" data-video-grid-target="grid">
      <% @videos.each do |video| %>
        <%= render 'videos/grid_item', video: video %>
      <% end %>
    </div>
  </div>
  <!-- Updated modal HTML -->
  <div id="videoModal">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Video Player</h5>
        <span class="close-btn" onclick="document.getElementById('videoModal').style.display='none';">&times;</span>
      </div>
      <div class="modal-body">
        <!-- Video will be inserted here -->
      </div>
      <div class="modal-footer">
        <button class="btn btn-light" onclick="document.getElementById('videoModal').style.display='none';">Close</button>
      </div>
    </div>
  </div>
</div>
